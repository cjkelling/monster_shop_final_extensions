<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.fields_for @addresses do |a|%>
    <%= a.label :address %>
    <%= a.text_field :address %>
    <%= a.label :city %>
    <%= a.text_field :city %>
    <%= a.label :state %>
    <%= a.text_field :state %>
    <%= a.label :zip %>
    <%= a.text_field :zip %>
    <%= a.label :address_nickname %>
    <%= a.text_field :address_nickname%>
  <% end %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.submit %>
<% end %>
